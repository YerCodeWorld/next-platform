{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma", ".env*"],
      "outputs": []
    },
    "build:scss": {
      "dependsOn": [],
      "inputs": ["assets/sass/**/*.scss", "src/**/*.scss"],
      "outputs": ["dist/styles.css", "dist/**/*.css"]
    },
    "build": {
      "dependsOn": ["^build", "build:scss", "db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "**/*.{ts,tsx,js,jsx}"],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["src/**/*.{ts,tsx}", "**/*.{ts,tsx}", "tsconfig.json"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false,
      "outputs": []
    }
  }
}